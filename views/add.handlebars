  <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

   
   <div class="container">

    <div class="row" style="background-color:black;margin:auto;width:40%;">

         <h1 style="color:white" class="text-center"> Add Gig</h1>

               {{#each errors}}
                 <div class="alert alert-danger mt-2 text-center" style="width:90%;margin:auto;">{{text}}</div> 
            
                 {{/each}}
         <form action="/gigs/add" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1" style="color:white">Title</label>
                <input type="text" class="form-control" id="" name="title" value="{{title}}" aria-describedby="emailHelp" placeholder="Enter title">
            </div>
            <div class="form-group">
                 {{errors.text.technologies}}
                <label for="exampleInputPassword1" style="color:white"> Technologies</label>
                <input type="text" class="form-control" id="" name="technologies" value="{{technologies}}" placeholder="technologies">
            </div> 
             <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">Budget</label>
                <input type="text" class="form-control" id="" name="budget" value="{{budget}}" placeholder="budget">
            </div> 
            <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">description</label><br>
                <textarea cols="55" rows="10" name="description" value="{{description}}" placeholder="description"></textarea>
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">Cotact email</label>
                <input type="text" class="form-control" id="" name="contact_email" value="{{contact_email}}" placeholder="email">
            </div> 
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
   </div>









