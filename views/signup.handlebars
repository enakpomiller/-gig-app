    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

   
   <div class="container">

    <div class="row" style="background-color:black;margin:auto;width:40%;">

         <h1 style="color:white" class="text-center"> SignUp </h1>

         <form action="/gigs/signup" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1" style="color:white">Names</label>
                <input type="text" class="form-control" id="" name="names" value="{{names}}" aria-describedby="emailHelp" placeholder="Enter title">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">Email</label>
                <input type="text" class="form-control" id="" name="email" value="{{email}}" placeholder="technologies">
            </div> 
             <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">Phone</label>
                <input type="text" class="form-control" id="" name="phone" value="{{phone}}" placeholder="budget">
            </div> 
            <div class="form-group">
                <label for="exampleInputPassword1 select2" style="color:white">Gender</label><br>
                <select name="gender" class="form-control" value="{{gender}}">
                    <option disabled> Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female"> Female</option>
                </select>
            </div>
             <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">Address</label>
                <input type="text" class="form-control" id="" name="address" value="{{address}}" placeholder=" Address">
            </div> 
              <div class="form-group">
                <label for="exampleInputPassword1" style="color:white">Date</label>
                <input type="date" class="form-control" id="" name="format" value="{{format}}" placeholder=" Address">
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
   </div>







